version: '3'

services:

  myapp:

    build: .
    container_name: myapp
    restart: always
    ports:
      - 8080:80

  mysql:
    image: mysql:8
    container_name: mysql
    restart: 'always'
    environment:
      MYSQL_ROOT_PASSWORD: "${DB_PASSWORD}"
      MYSQL_DATABASE: "${DB_DATABASE}"
    ports:
      - 3306:3306
    volumes:
      - ./mysql:/var/lib/mysql

